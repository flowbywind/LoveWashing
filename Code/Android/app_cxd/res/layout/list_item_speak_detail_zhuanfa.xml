<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_item_background_gray"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/layout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin"
        android:visibility="visible" >

        <ImageButton
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_middle"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_toRightOf="@+id/image"
            android:gravity="center"
            android:singleLine="true"
            android:text="小 美"
            android:textColor="@color/fontcolor_blue"
            android:textSize="@dimen/fontsize_big" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_middle"
            android:layout_alignLeft="@+id/nickname"
            android:layout_below="@+id/nickname"
            android:gravity="center"
            android:text="11-25 13:44"
            android:textColor="@color/fontcolor_light"
            android:textSize="@dimen/fontsize_middle" />
    </RelativeLayout>

    <Button
        android:id="@+id/praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@null"
        android:drawableLeft="@drawable/praise_icon"
        android:paddingBottom="@dimen/layout_margin"
        android:text="赞"
        android:textColor="@color/fontcolor_light"
        android:textSize="@dimen/fontsize_middle"
        android:visibility="visible" />

    <TextView
        android:id="@+id/list_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layout_image"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_toLeftOf="@+id/praise"
        android:lineSpacingExtra="3dp"
        android:paddingBottom="2dp"
        android:text="新闻内容展示"
        android:textColor="@color/fontcolor_light"
        android:textSize="@dimen/fontsize_middle" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/line_light" />

</RelativeLayout>