<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontcolor_white" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:background="@drawable/top_bg" >

        <Button
            android:id="@+id/speakType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/tab_right" />

        <TextView
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_big"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/layout_margin"
            android:text="发言"
            android:textColor="@color/fontcolor_dark"
            android:textSize="@dimen/fontsize_middle" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_title"
        android:background="@color/line_light" />

    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title" >

        <FrameLayout
            android:id="@+id/container_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</RelativeLayout>