<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/fontcolor_white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/subtractbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_addandsubtract_subtract_selector"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/addandsubtracttextview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_middle"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/addbtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_addandsubtract_add_selector"
        android:orientation="horizontal" />

</LinearLayout>