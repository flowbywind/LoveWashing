<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_big_secondary"
    android:background="@drawable/bg_kuang"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/relative_select"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_big_secondary"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/sel_shouyi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_big_secondary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/btn_xiala"
            android:gravity="center"
            android:text="全部收益"
            android:textColor="@color/fontcolor_light"
            android:textSize="@dimen/fontsize_score_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="@dimen/height_big_secondary" >

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/line_vertical_short" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/height_big_secondary"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/sel_qixian"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_big_secondary"
            android:layout_centerInParent="true"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/btn_xiala"
            android:gravity="center"
            android:text="全部期限"
            android:textColor="@color/fontcolor_light"
            android:textSize="@dimen/fontsize_score_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="1dp"
        android:layout_height="@dimen/height_big_secondary"
        android:gravity="center" >

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/line_vertical_short" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/height_big_secondary"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/sel_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_big_secondary"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_margin"
            android:drawablePadding="3dp"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/btn_xiala"
            android:gravity="center"
            android:text="全部状态"
            android:textColor="@color/fontcolor_light"
            android:textSize="@dimen/fontsize_score_small" />
    </RelativeLayout>

</LinearLayout>