<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontcolor_white" >

    <include
        android:id="@+id/include_title"
        layout="@layout/common_header" />

    <RelativeLayout
        android:id="@+id/layout_content1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:layout_below="@+id/include_title"
        android:layout_marginTop="@dimen/layout_margin" >

        <EditText
            android:id="@+id/txt_authcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white"
            android:hint="验证码："
            android:paddingLeft="@dimen/layout_margin_middle"
            android:textColorHint="@color/line_middle"
            android:textSize="@dimen/fontsize_middle" />

        <Button
            android:id="@+id/btn_getcode"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/layout_margin"
            android:background="@null"
            android:padding="6dp"
            android:text="重发验证码"
            android:textColor="@color/fontcolor_skyblue"
            android:textSize="@dimen/fontsize_small" >
        </Button>

        <View
            android:id="@+id/lineview1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/line_light" />

        <View
            android:id="@+id/lineview2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_light" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_content2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:layout_below="@+id/layout_content1"
        android:layout_marginTop="@dimen/layout_margin" >

        <EditText
            android:id="@+id/txt_newpsw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_white"
            android:hint="设置新密码："
            android:inputType="textPassword"
            android:paddingLeft="@dimen/layout_margin_middle"
            android:textColorHint="@color/line_middle"
            android:textSize="@dimen/fontsize_small" />

        <View
            android:id="@+id/lineview7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/line_light" />

        <View
            android:id="@+id/lineview8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/line_light" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big"
        android:layout_below="@+id/layout_content2"
        android:layout_marginLeft="@dimen/layout_margin_middle"
        android:layout_marginRight="@dimen/layout_margin_middle"
        android:layout_marginTop="@dimen/layout_margin_middle"
        android:background="@drawable/btn_red"
        android:text="确  定"
        android:textColor="@color/fontcolor_white"
        android:textSize="@dimen/fontsize_big" >
    </Button>

</RelativeLayout>