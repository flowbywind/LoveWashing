<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontcolor_white" >

    <include
        android:id="@+id/include_title"
        layout="@layout/common_header" >
    </include>

    <include
        android:id="@+id/tab_list_pull_down"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/include_title"
        layout="@layout/pulldownviewtemplate" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/layout_margin_middle"
        android:background="@drawable/btn_blue"
        android:text="+ 添加银行卡"
        android:textColor="@color/fontcolor_white"
        android:textSize="@dimen/fontsize_score_big"
        android:visibility="gone" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin"
        android:layout_below="@+id/tab_list_pull_down" />

</RelativeLayout>