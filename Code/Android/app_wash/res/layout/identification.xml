<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontcolor_white" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_big" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="@dimen/layout_margin"
            android:text="取消"
            android:textColor="@color/fontcolor_light"
            android:textSize="@dimen/fontsize_middle" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="认证信息"
            android:textColor="@color/fontcolor_dark"
            android:textSize="@dimen/fontsize_score_big" />

        <Button
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingRight="@dimen/layout_margin"
            android:text="跳过"
            android:textColor="@color/fontcolor_light"
            android:textSize="@dimen/fontsize_middle" />
    </RelativeLayout>

    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout_title"
        android:background="@color/line_middle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view0" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/layout_margin" >

            <ImageView
                android:id="@+id/photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/layout_margin"
                android:src="@drawable/default_img" />

            <TextView
                android:id="@+id/tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/height_small"
                android:text="上传名片照片"
                android:textColor="@color/fontcolor_light"
                android:textSize="@dimen/fontsize_middle" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tips"
                android:layout_marginTop="@dimen/height_small"
                android:background="@color/line_middle" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="@dimen/height_small"
                android:background="@color/line_middle" />

            <RelativeLayout
                android:id="@+id/layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin" >

                <TextView
                    android:id="@+id/name0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_small"
                    android:text="真实姓名:"
                    android:textColor="@color/fontcolor_light"
                    android:textSize="@dimen/fontsize_small" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/name0"
                    android:layout_marginLeft="@dimen/height_list_margin"
                    android:layout_toRightOf="@+id/name0"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:textColor="@color/fontcolor_dark"
                    android:textSize="@dimen/fontsize_small" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/name0"
                    android:layout_marginTop="@dimen/height_small"
                    android:background="@color/line_light"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/type0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:layout_marginTop="@dimen/height_small"
                    android:text="我是:"
                    android:textColor="@color/fontcolor_light"
                    android:textSize="@dimen/fontsize_small"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:layout_marginLeft="@dimen/height_list_margin"
                    android:layout_toRightOf="@+id/type0"
                    android:paddingBottom="@dimen/height_small"
                    android:paddingTop="@dimen/height_small"
                    android:text="请选择"
                    android:textColor="@color/fontcolor_dark"
                    android:textSize="@dimen/fontsize_small"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/type0"
                    android:src="@drawable/btn"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/name0"
                    android:layout_marginTop="@dimen/height_small"
                    android:background="@color/line_light" />

                <TextView
                    android:id="@+id/city0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:layout_marginTop="@dimen/height_small"
                    android:text="所在城市:"
                    android:textColor="@color/fontcolor_light"
                    android:textSize="@dimen/fontsize_small" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:layout_marginLeft="@dimen/height_list_margin"
                    android:layout_toRightOf="@+id/city0"
                    android:background="@null"
                    android:paddingBottom="@dimen/height_small"
                    android:paddingTop="@dimen/height_small"
                    android:text="请选择"
                    android:textColor="@color/fontcolor_dark"
                    android:textSize="@dimen/fontsize_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/city0"
                    android:src="@drawable/btn" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/city0"
                    android:layout_marginTop="@dimen/height_small"
                    android:background="@color/line_light" />

                <RelativeLayout
                    android:id="@+id/layout_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view5" >

                    <TextView
                        android:id="@+id/business0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_small"
                        android:text="所在行业:"
                        android:textColor="@color/fontcolor_light"
                        android:textSize="@dimen/fontsize_small" />

                    <TextView
                        android:id="@+id/business"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/height_list_margin"
                        android:layout_toRightOf="@+id/business0"
                        android:paddingBottom="@dimen/height_small"
                        android:paddingTop="@dimen/height_small"
                        android:text="请选择"
                        android:textColor="@color/fontcolor_dark"
                        android:textSize="@dimen/fontsize_small" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/business0"
                        android:src="@drawable/btn" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/business0"
                        android:layout_marginTop="@dimen/height_small"
                        android:background="@color/line_light" />

                    <TextView
                        android:id="@+id/brand0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view6"
                        android:layout_marginTop="@dimen/height_small"
                        android:text="代理品牌:"
                        android:textColor="@color/fontcolor_light"
                        android:textSize="@dimen/fontsize_small" />

                    <EditText
                        android:id="@+id/brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/brand0"
                        android:layout_marginLeft="@dimen/height_list_margin"
                        android:layout_toRightOf="@+id/brand0"
                        android:background="@null"
                        android:hint="请输入代理品牌"
                        android:textColor="@color/fontcolor_dark"
                        android:textSize="@dimen/fontsize_small" />
                </RelativeLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/layout_brand"
                    android:layout_marginTop="@dimen/height_small"
                    android:background="@color/line_light" />

                <RelativeLayout
                    android:id="@+id/layout_market"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view7"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/market0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_small"
                        android:text="卖场名称:"
                        android:textColor="@color/fontcolor_light"
                        android:textSize="@dimen/fontsize_small" />

                    <EditText
                        android:id="@+id/market"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/market0"
                        android:layout_marginLeft="@dimen/height_list_margin"
                        android:layout_toRightOf="@+id/market0"
                        android:background="@null"
                        android:hint="请输入商场名称"
                        android:textColor="@color/fontcolor_dark"
                        android:textSize="@dimen/fontsize_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/market0"
                        android:layout_marginTop="@dimen/height_small"
                        android:background="@color/line_light" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/position0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_market"
                    android:layout_marginTop="@dimen/height_small"
                    android:text="职位:"
                    android:textColor="@color/fontcolor_light"
                    android:textSize="@dimen/fontsize_small" />

                <TextView
                    android:id="@+id/position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_market"
                    android:layout_marginLeft="@dimen/height_list_margin"
                    android:layout_marginTop="@dimen/height_small"
                    android:layout_toRightOf="@+id/position0"
                    android:background="@null"
                    android:text="请选择"
                    android:textColor="@color/fontcolor_dark"
                    android:textSize="@dimen/fontsize_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/position0"
                    android:src="@drawable/btn" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/layout0"
                android:layout_alignRight="@+id/layout0"
                android:layout_below="@+id/layout0"
                android:visibility="gone" >

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/height_small"
                    android:background="@color/line_light" />

                <EditText
                    android:id="@+id/describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view8"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="描述一下你的公司吧"
                    android:minHeight="100dp"
                    android:padding="@dimen/layout_margin_short"
                    android:textColor="@color/fontcolor_dark"
                    android:textSize="@dimen/fontsize_small" />
            </RelativeLayout>

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layout_describe"
                android:layout_marginTop="@dimen/height_small"
                android:background="@color/line_light" />

            <Button
                android:id="@+id/queding"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_big_secondary"
                android:layout_alignLeft="@+id/layout0"
                android:layout_alignRight="@+id/layout0"
                android:layout_below="@+id/view9"
                android:layout_marginTop="@dimen/height_middle"
                android:background="@drawable/btn_blue"
                android:text="认 证"
                android:textColor="@color/fontcolor_white"
                android:textSize="@dimen/fontsize_big" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>