<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout style="@style/dialog_title_style" >

        <TextView
            android:id="@+id/ziliao"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:text="提示信息"
            android:textColor="@color/fontcolor_dark"
            android:textSize="19sp" />

        <Button style="@style/dialog_closebtn_style" />

        <View style="@style/dialog_line_style" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:drawableLeft="@null"
            android:text="退出提示"
            android:textColor="#000000"
            android:textSize="25sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="请在认证信息后查看活动"
            android:textColor="#666666"
            android:textSize="@dimen/fontsize_middle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
             android:layout_marginTop="20dp"
            android:background="@color/line_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_big"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                style="@style/dialog_cancel_style"
                android:text="取消"
                android:textColor="@color/fontcolor_dark"
                android:textSize="@dimen/fontsize_middle" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/height_big"
                android:background="@color/line_light" />

            <Button
                android:id="@+id/ensure"
                style="@style/dialog_ensure_style"
                android:text="去认证"
                android:textColor="@color/fontcolor_white"
                android:textSize="@dimen/fontsize_middle" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>