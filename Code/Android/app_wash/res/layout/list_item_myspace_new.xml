<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_big"
    android:background="@drawable/btn_myspace_background" >

    <ImageView
        android:id="@+id/setting_list_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="15dip"
        android:src="@drawable/btn" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/text"
        android:layout_marginLeft="@dimen/height_small" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_big"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="left|center_vertical"
        android:text="新用户注册"
        android:textColor="@color/fontcolor_dark"
        android:textSize="@dimen/fontsize_middle" />

</RelativeLayout>